<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragment"
        android:name="com.mulik.example.vaksys_android.fragmentflexible2.Fragment_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        />

    <fragment
        android:id="@+id/fragment2"
        android:layout_weight="1"
        android:name="com.mulik.example.vaksys_android.fragmentflexible2.Fragment_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/fragment"
        android:layout_toRightOf="@+id/fragment" />
</LinearLayout>